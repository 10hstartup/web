<%- include('blocks/app-header') %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
          <h1 class="card-title" style="font-size: 170%">Login</h1>
          <div class="alert alert-primary text-center" role="alert">
            Don't have an account? <a href="/signup">Join</a> here.
          </div>
          
            <form id="login">
              <div class="form-group">
                <label for="name">Username</label>
                <input type="text" class="form-control" id="name" maxlength="20" placeholder="Enter username" required>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" maxlength="40" placeholder="Password" required>
                <small id="userHelp" class="form-text text-muted">We'll never share your personal details with anyone else.</small>
              </div>
              <button type="submit" class="btn btn-primary" id="submit"><i class="fas fa-sign-in-alt" style="color: #fff !important"></i> Login</button>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <style>
      body {
        background: #F6F6F6 !important;
      }
    </style>
  <%- include('blocks/footer') %>
  <script src="https://apis.google.com/js/platform.js" async defer></script>
  <script src="./js/login.js" defer></script>
</body>
</html>
