            </div>
            <div class="form-group">
              <!-- <label for="phone">Phone</label> -->
              <input type="hidden" class="form-control" value="Loading..." id="phone" readonly>
            </div>
            <div class="form-group">
              <!-- <label for="location">Location</label> -->
              <input type="hidden" class="form-control" value="Loading..." id="location" readonly>
            </div>
            <p id="change">
              <button class="btn btn-primary" id="give-rep"><i style="color: #fff !important" class="fas fa-plus"></i> Give Rep</button>
            </p>
          </form>
          <div id="disqus_thread"></div>
        </div>
      </div>
    </div>
  </div>
