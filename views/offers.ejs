<%- include('blocks/header') %>
    <div class="container"></div>
    <div class="container mt-2">
      <h1><i class="fas fa-list"></i> Requests</h1>
      <p style="font-size: 120%;">If you are in need of resources, <a href="/new">create a new request</a>.</p>
      <div class="input-group mb-3">
        <input type="text" class="form-control" id="item-input" placeholder="Enter Item" maxlength="30" required>&nbsp;&nbsp;
        <input type="text" class="form-control" id="author-input" placeholder="Enter Author" maxlength="30" required>&nbsp;&nbsp;
        <input type="text" class="form-control" id="date-input" placeholder="Enter Date" maxlength="30" required>&nbsp;&nbsp;
        <input type="text" class="form-control" id="quantity-input" placeholder="Enter Quantity" maxlength="30" required>&nbsp;&nbsp;
        <input type="text" class="form-control" id="location-input" placeholder="Enter Location" maxlength="30" required>
      </div>  
      <button class="btn btn-primary" onclick="search()"><i class="fas fa-search" style="color: #fff !important"></i> Search</button>
